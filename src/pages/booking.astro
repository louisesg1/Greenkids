---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Priser from "../components/Priser.astro";
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
---

<MainLayout title="Book en stand!">
  <article class="mb-22">
    <h1 class="text-center mb-8 mt-12">Book en stand!</h1>
    <div class="flex justify-center mb-8 px-[36px]">
      <p>
        Standleie kan begynne hvilken ukedag som helst og regnes <br />feks
        man-man, ons-ons & tors-tors. Vi tar en provisjon på 20%
      </p>
    </div>
    <h2 class="text-center mb-8">Hvor lenge vil du booke?</h2>
    <div class="flex justify-center">
      <div class="md:grid grid-cols-2 md:px-[105px] px-[36px] gap-x-8">
        <Priser>
          <span slot="overskrift">17 mai-uken (TILBUD)</span>
          <span slot="pris">GRATIS</span>
          <span slot="tekst">
            Har du hatt stand hos oss før og vil selge noe 17-mai relatert? Da
            kan du selge hos oss uten å booke stand!
          </span></Priser
        >
        <Priser>
          <span slot="overskrift">Én uke</span>
          <span slot="pris">250 kr</span>
          <span slot="tekst">
            6 dager i bookingkalender da søndag ikke regnes med. Prisen
            inkluderer kleshengere, merkelapper og eksponering i butikk.
          </span></Priser
        >
        <Priser>
          <span slot="overskrift">To uker</span>
          <span slot="pris">500 kr</span>
          <span slot="tekst">
            13 dager i bookingkalender da søndag ikke regnes med.
          </span></Priser
        >
        <Priser>
          <span slot="overskrift">Tre uker</span>
          <span slot="pris">750 kr</span>
          <span slot="tekst">
            19 dager dager i bookingkalender da søndag ikke regnes med.</span
          ></Priser
        >
        <Priser>
          <span slot="overskrift">En måned</span>
          <span slot="pris">1000 kr</span>
          <span slot="tekst">
            25 dager i bookingkalender da søndag ikke regnes med.</span
          ></Priser
        >
        <Priser>
          <span slot="overskrift">Én dag</span>
          <span slot="pris">36 kr</span>
          <span slot="tekst">
            Prisen inkluderer kleshengere, merkelapper og eksponering i butikk.
          </span></Priser
        >
      </div>
    </div>
    <h2 class="text-center my-8">Ekstra kostnader</h2>
    <div class="flex justify-center">
      <div class="md:grid grid-cols-2 px-[36px] md:px-[105px] gap-x-8">
        <Priser>
          <span slot="overskrift">Ryddetjeneste (ved avtale)</span>
          <span slot="pris">150 kr</span>
        </Priser>
        <Priser>
          <span slot="overskrift">Ryddetjeneste (ved uteblivelse)</span>
          <span slot="pris">300 kr</span>
        </Priser>
        <Priser>
          <span slot="overskrift">Ekstra prisark</span>
          <span slot="pris">10 kr</span>
          <span slot="tekst">
            65 stk per ark (det følger med 1 ark ved hver standleieuke)
          </span></Priser
        >
      </div>
    </div>
  </article>
</MainLayout>

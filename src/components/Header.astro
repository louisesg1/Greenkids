---
import { Image } from "astro:assets";
import Link from "../components/Link.astro";
import logo from "../assets/images/logo.svg";
---

<div class="">
  <div class="fixed top-0 left-0 w-full z-10 bg-gul-400">
    <div class="flex justify-between items-center py-4 ml-3 px-4 z-15">
      <a href="/" class="max-w-18">
        <Image src={logo} alt="logo" />
      </a>
      <button id="hamburgerButton" class="block text-gronn-800 md:hidden">
        <svg
          class="w-7 h-7"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="3"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <div class="hidden md:flex">
        <ul class="flex items-center space-x-8">
          <li>
            <div class="max-w-xl">
              <Link href="/booking" variant="primarysmall" target=""
                >Book en stand!</Link
              >
            </div>
          </li>
          <li>
            <a href="/omoss" class="navtext hover:underline"> Om oss </a>
          </li>
          <li>
            <a href="/blogg" class="navtext hover:underline"> Blogg </a>
          </li>
          <li>
            <a href="/faq" class="navtext hover:underline"> FAQ </a>
          </li>
          <li>
            <a href="/kontakt" class="navtext hover:underline">
              Kontakt oss!
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div
  id="mobileMenu"
  class="md:hidden hidden fixed top-0 bg-gul-400 w-full mt-22"
>
  <ul class="space-y-4 py-4 navigation">
    <li>
      <a href="/index" class="block px-4 py-2">
        <p class="navigation">Forside</p>
      </a>
    </li>
    <li>
      <a href="/omoss" class="block px-4 py-2"
        ><p class="navigation">Om oss</p></a
      >
    </li>
    <li>
      <a href="/blogg" class="block px-4 py-2">
        <p class="navigation">Blogg</p>
      </a>
    </li>
    <li>
      <a href="/faq" class="block px-4 py-2">
        <p class="navigation">FAQ</p>
      </a>
    </li>
    <li>
      <a href="/kontakt" class="block px-4 py-2">
        <p class="navigation">Kontakt oss!</p>
      </a>
    </li>
    <Link href="/booking" variant="primarysmall" target="">Book en stand!</Link>
  </ul>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburgerButton = document.getElementById("hamburgerButton");
    const mobileMenu = document.getElementById("mobileMenu");

    hamburgerButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  });
</script>

---
const { href = "#", target = "_self", variant = "primary" } = Astro.props;

const linkStyling = "rounded-full";

const variantClasses = {
  primary:
    "px-12 p-3  bg-rosa-400 border border-2 hover:shadow-button border-gronn-800 transition-shadow duration-150 active:bg-rosa-500 disabled:bg-graa-200 disabled:border-graa-400",
  secondary:
    "px-8 p-3 bg-gronn-200 border-2 hover:shadow-button transition-shadow duration-150 active:bg-gronn-300 disabled:bg-graa-200 disabled:border-graa-400",
  primarysmall:
    "px-4 p-2 bg-rosa-400 text-sm border-2 border-gronn-800 hover:shadow-button transition-shadow duration-150 active:bg-rosa-500 disabled:bg-graa-200 disabled:border-graa-400",
  secondarysmall:
    "px-4 p-2 bg-gronn-200 border-2 text-sm border-gronn-800 hover:shadow-button transition-shadow duration-150 active:bg-gronn-300 disabled:bg-graa-200 disabled:border-graa-400",
  text: "font-normal text-gronn-800",
};
---

<a
  href={href}
  class:list={[linkStyling, variantClasses[variant]]}
  target={target}><slot /></a
>

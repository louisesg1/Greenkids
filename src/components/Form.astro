---
import Button from "./Button.astro";
---

<form class="max-w-sm mx-auto">
  <div class="mb-3">
    <label for="navn" class="block mb-2 ml-4 text-sm font-medium text-gronn-800"
      >Fullt navn</label
    >
    <input
      type="text"
      id="navn"
      class="bg-gul-400 border-2 border-gronn-800 text-gronn-800 text-sm rounded-full focus:ring-rosa-900 focus:border-rosa-900 block w-full p-2.5"
      placeholder="Navn Navnesen"
      required
    />
  </div>
  <div class="mb-3">
    <label
      for="email"
      class="block mb-2 ml-4 text-sm font-medium text-gronn-800">Epost</label
    >
    <input
      type="email"
      id="email"
      class="bg-gul-400 border-2 border-gronn-800 text-gronn-800 text-sm rounded-full focus:ring-rosa-900 focus:border-rosa-900 block w-full p-2.5"
      placeholder="navn.navnesen@gmail.com"
      required
    />
  </div>
  <div class="mb-2">
    <label
      for="tittel"
      class="block mb-2 ml-4 text-sm font-medium text-gronn-800"
      >Tittel for melding</label
    >
    <input
      type="text"
      id="tittel"
      class="bg-gul-400 border-2 border-gronn-800 text-gronn-800 text-sm rounded-full focus:ring-rosa-900 focus:border-rosa-900 block w-full p-2.5"
      placeholder="Tittel"
      required
    />
  </div>
  <label
    for="message"
    class="block mb-2 ml-4 text-sm font-medium text-gronn-800">Melding</label
  >
  <textarea
    id="message"
    rows="4"
    class="block p-2.5 w-full text-sm bg-gul-400 border-2 border-gronn-800 text-gronn-800 rounded-2xl focus:ring-rosa-900 focus:border-rosa-900"
    placeholder="Skriv her..."></textarea>
  <div class="max-w-xl mx-auto block md:hidden">
    <a href="/faq"><Button variant="primarysmall">Send inn</Button></a>
  </div>
  <div class="max-w-xl mx-auto md:block hidden">
    <a href="/faq"><Button variant="primary">Send inn</Button></a>
  </div>
</form>

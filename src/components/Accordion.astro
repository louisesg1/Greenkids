<div x-data="{ open: false }" class="max-w-3xl">
  <button
    @click="open = !open"
    class="w-full flex justify-between items-center p-4 bg-gul-400 text-gronn-800"
  >
    <span class="text-left font-sans"><p>[Spørsmål her]</p></span>
    <svg
      class="w-4 h-4 transform transition-transform"
      :class="{ 'rotate-180': open }"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  <div
    x-show="open"
    x-collapse
    class="p-4 bg-gul-400 text-gronn-800 border-t border-gronn-800"
  >
    <p>[Innhold]</p>
  </div>
</div>

---
const { variant = "primary" } = Astro.props;

const buttonStyling = "rounded-full my-4";

const variantClasses = {
  primary:
    "px-12 p-3 font-normal bg-rosa-400 text-gronn-800 border border-2 hover:shadow-button border-gronn-800 active:bg-rosa-500 disabled:bg-graa-200",
  secondary:
    "px-8 p-3 bg-gronn-200 font-normal text-gronn-800 border-2 hover:shadow-button active:bg-gronn-300 disabled:bg-graa-200",
  primarysmall:
    "px-4 p-2 font-normal text-gronn-800 text-lillebase bg-rosa-400 border-2 border-gronn-800 hover:shadow-button active:bg-rosa-500 disabled:bg-graa-200",
  secondarysmall:
    "px-4 p-2 font-normal text-gronn-800 border-2 border-gronn-800 hover:shadow-button active:bg-gronn-300 disabled:bg-graa-200",
};
---

<button class:list={[buttonStyling, variantClasses[variant]]}
  ><p><slot /></p></button
>
